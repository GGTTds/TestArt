@model TZASPART.User;
<section id="contact" class="parallax-section">
    <div class="container">
        <div class="row">

            <div class="col-md-12 col-sm-12">
                <!-- SECTION TITLE -->
                <div class="wow fadeInUp section-title" data-wow-delay="0.2s">
                    <h2>Регистрация</h2>
                </div>
            </div>
            <div class="col-md-7 col-sm-10">
                <!-- CONTACT FORM HERE -->
                <div class="wow fadeInUp" data-wow-delay="0.4s">
                    <form id="contact-form" asp-action="Register" asp-controller="Account" method="post">
                        <div class="col-md-6 col-sm-6">
                            <input type="text" asp-for="Fio" class="form-control" placeholder="ФИО" required="">
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" asp-for="Phone" class="form-control" placeholder="Номер телефона" required="">
                            <span asp-validation-for="Phone"></span>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input type="text" asp-for="Email" class="form-control" placeholder="Почта" required="">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <input type="Password" asp-for="Password" class="form-control" placeholder="Пароль" required="">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="col-md-offset-8 col-md-4 col-sm-offset-6 col-sm-6">
                            <button id="submit" type="submit" class="form-control" name="submit">Регистрация</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>